<div class="container">
    <div class="row">
        {{!-- first column to show burgers --}}
        <div class="col-md-8">
            <ul>
                {{#each burgers}} 
                    {{#unless this.devoured}} 
                        {{> burgers/burger-block this }} 
                    {{/unless}} 
                {{/each}}
            </ul>
        </div>


        {{!-- second column to show devoured burgers --}}
        <div class="col-md-4">
            <ul>
                {{#each burgers}} 
                    {{#if this.devoured}} 
                        {{!-- {{> burgers/burger-block this }}  --}}
                        <li>{{this.name}}</li>
                    {{/if}} 
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <form class="create-form">
                <div class="form-group">
                    <label for="burgerName">Burger Name:</label>
                    <textarea class="form-control" id="burgerName" rows="1" name="name"></textarea>
                </div>
                <button type="submit">Add Burger</button>
            </form>
            <h2>Enter a Burger you want to eat. Hit the "Add Burger" Button</h2>
        </div>
    </div>
</div>